<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="bookTitle">Название</label>
        <input type="text" value="<%= book.title %>" name="title" class="form-control" id="bookTitle">
    </div>

    <div class="form-group">
        <label for="bookDescription">Описание</label>
        <textarea rows="3" name="description" class="form-control" id="bookDescription"><%= book.description %></textarea>
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
